
extends dashboardlayout

block content
	div.row
		div.col-sm-6
			

			div.row.teacher-summary(style="height: 15vh;")
				div.col-sm-4
					img(src="http://placehold.it/100x100").img-circle
				div.col-sm-8
					div.row
						div.col-sm-7
							h4 James Hunter
							h4 Class 3B
						div.col-sm-5
							button(type="button" style="width: 100%; margin-top: 15px;").btn.btn-success Live
					div.row(style="margin-top: 15px;")
						div.progress
							div(class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;") 60%
							
			

			div.row
				
				div.col-sm-6.box
					hr
					h4(align="center") Students Leaderboard
					hr

					div(style="overflow: scroll; height: 60vh; padding-left: 5px;")
						- for(var i = 0 ; i < 10 ; i ++) {
							div.row.display-box
								div.col-sm-4
									img(onclick="viewBio()" src="http://placehold.it/50x50").img-circle
								div.col-sm-8
									p Daryl Rodrigo
									p level: 4
						- }
			
				div.col-sm-6.box
					hr
					h4(align="center") Updates
					hr

					div(style="overflow: scroll; height: 60vh; padding-left: 5px;")
						- for(var i = 0 ; i < 10 ; i ++) {
							div.row.display-box
								h3.popover-title Owen Chen
								div.popover-content	Finished level 3 - 69%
						- }

				
		
		div.col-sm-6

			div.row(style="margin-top: 15px;").box
				
				ul.nav.nav-tabs
					li.active
						a(href="#home" data-toggle="tab") Current Standing
					li
						a(href="#profile" data-toggle="tab") Current Progress
					li
						a(href="#messages" data-toggle="tab") Weaknesses
					li
						a(href="#settings" data-toggle="tab") Settings
			

				<!-- Tab panes -->
				div.tab-content#my-tab-content
					div(style="height: 80vh;").well.tab-pane.active#home
						p Testing testing wellwellwellTesting testing wellwellwellTesting testing wellwellwellTesting testing wellwellw

					
					div(style="height: 80vh;").well.tab-pane#profile 
						- for(var i = 0 ; i < 10 ; i ++) {

							div.row
								div.col-sm-3
									h4 Some Dude
								div.col-sm-9(style="margin-top: 8px;")
									div.progress
										div.progress-bar.progress-bar-success(role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%")
											span(class="sr-only") 40% Complete (success)

						- }

					div(style="height: 80vh;").well.tab-pane#messages 
					div(style="height: 80vh;").well.tab-pane#settings 

block settings
	div(style="display: none")#studentBio
		div(style="position: fixed; bottom: 0px; height: 25%; width: 100%; padding-left: 10%;").well
			div.row
				img(src="/img/icons/close.png" height="20" width="20" align="right" onclick="closeBio();")
				div.col-sm-1.box
					img(src="http://placehold.it/100x100").img-circle
					h4(align="center") Chris Howell 
				div.col-sm-3.box
					div.row(style="margin: 5px;")
						h4 Current Progress

					div.row(style="margin: 5px;")
						div.progress
							div.progress-bar.progress-bar-success(role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%")
								span(class="sr-only") 40% Complete (success)

						div.progress
							div.progress-bar.progress-bar-info(role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 20%")
								span(class="sr-only") 20% Complete (success)


						div.progress
							div.progress-bar.progress-bar-warning(role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width: 80%")
								span(class="sr-only") 80% Complete (success)

						div.progress
							div.progress-bar.progress-bar-danger(role="progressbar" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100" style="width: 10%")
								span(class="sr-only") 10% Complete (success)




				div.col-sm-2.box(style="margin: 5px;")
					div.row
						h4 Strengths

						p
							span.strength html5
							span.strength css3
							span.strength jquery
							span.strength bootstrap3

					div.row
						h4 Weaknesses

						p
							span.weakness html5
							span.weakness css3
							span.weakness jquery
							span.weakness bootstrap3
				
				div.col-sm-5.box(style="margin: 5px;")
					div.row
							h4(style="margin-left: 15px;") Progress

					div.row
						canvas(id="myChart" width="750" height="150")
					
						


	script.
		//Progress Chart
		var data = {
			labels : ["January","February","March","April","May","June","July"],
			datasets : [
				{
					fillColor : "rgba(220,220,220,0.5)",
					strokeColor : "rgba(220,220,220,1)",
					pointColor : "rgba(220,220,220,1)",
					pointStrokeColor : "#fff",
					data : [65,59,90,81,56,55,40]
				},
				{
					fillColor : "rgba(151,187,205,0.5)",
					strokeColor : "rgba(151,187,205,1)",
					pointColor : "rgba(151,187,205,1)",
					pointStrokeColor : "#fff",
					data : [28,48,40,19,96,27,100]
				}
			]
		}

		//Get the context of the canvas element we want to select
		var ctx = document.getElementById("myChart").getContext("2d");
		var myNewChart = new Chart(ctx).Line(data);

		

		//Owen Functions

		jQuery(document).ready(function ($) {

			$('#tabs').tab();
		});

		function viewBio(){
			$("#studentBio").slideDown("fast");
		}

		function closeBio(){
			$("#studentBio").slideUp("fast");
		}






