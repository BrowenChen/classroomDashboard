extends profile_layout

block content

		div.row

		p &nbsp;
		p &nbsp;
		p &nbsp;

			div.small-4.large-centered.columns(style="text-position: center; background-color:#000000; opacity:0.7; border-radius: 20px 20px 20px 20px; padding-bottom:10px; padding-top:10px;")
				
				h1(align="center" style="color: #FFFFFF; font-family: 'Lato', sans-serif;") Add Classroom

				
				hr

				form(name="input" action="/teachers/addclassroom" method="post")#usrform
					input(type="text" name="name" placeholder="Class Name")
					input(type="text" placeholder="Class Year" name="year")

					center 
						p(style="color: #FFFFFF;") Allow joining by code - 
							input(type="checkbox" name="joinByCode" value='true') 
					p(style="color: #FFFFFF;") This will allow a teacher to add users to a classroom using a student or child code.
					
					hr
					center
						p 
							button.button.round(type="submit" value="Submit") Submit
		p &nbsp;